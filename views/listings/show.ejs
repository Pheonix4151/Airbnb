<% layout("/layout/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2 class="mb-3 mt-3">
                    <%=lists.title %>
                </h2>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-6 offset-3">
                            <img src="<%= lists.image %>" class="card-img-top card-img-bottom" alt="Image">
                        </div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            Owned By <i>
                                <%= lists.owner.username %>
                            </i>
                        </p>
                        <p class="card-text">
                            <%=lists.description %>
                        </p>
                        <p>&#8377;<%= lists.price ? lists.price.toLocaleString("en-IN") : "N/A" %>/Night</p>
                        <p class="card-text">
                            <%=lists.location %>
                        </p>
                        <p class="card-text">
                            <%=lists.country %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% if(currUser && currUser._id.equals( lists.owner._id)) { %>
            <div class="row mb-5">
                <div class="col-8 offset-2 spam">
                    <form action="/listing/<%=lists.id %>/edit"><button class="btn btn-dark offset-2">Edit</button>
                    </form>

                    <form action="/listing/<%=lists.id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark delete offset-4">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
            <% if(currUser) { %>
                <div class="row ">
                    <div class="col-8 offset-2 mb-3 mt-3">
                        <hr>
                        <h4>Listing Review</h4>
                        <form action="/listing/<%=lists.id %>/reviews" method="post" novalidate
                            class="needs-validation">
                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rate The Listing</label>
                                <input type="range" name="review[rating]" id="rating" min="1" max="5"
                                    class="form-range">
                            </div>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comment</label>
                                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                                <div class="invalid-feedback">
                                    Please add a comment
                                </div>
                            </div>
                            <div class="mb-3 mt-3">
                                <button class="btn btn-outline-dark" class="form-control">Submit</button>
                            </div>
                        </form>
                        <hr>
                    </div>
                </div>
                <% } %>
                <div class="row">
                <h4 class="offset-2">All Reviews</h4>
                    <div class="col-8 offset-2 mb-3 mt-3">
                    <% for(review of lists.reviews) {%>
                        <div class="card col-5 ms-1 mb-3 offset-3">
                            <div class="card-body ps-2">
                                <div class="card-title"><strong><%= review.author.username %></strong></div>
                                <div class="card-text">
                                    <i><%= review.comment %></i>
                                </div>
                                <div class="card-text">
                                    <%= review.rating %> â˜…
                                </div>
                            </div>
                            <% if( currUser && review.author._id.equals(currUser._id)) { %>
                            <form action="/listing/<%=lists._id %>/reviews/<%=review._id %>?_method=DELETE" class="mb-3 ps-2"
                                method="post">
                                <button class="btn btn-small btn-dark">Delete</button>
                            </form>
                            <% } %>
                        </div>
                        <% } %>
                </div>
                </div>

    </body>